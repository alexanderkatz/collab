<!-- Include Header -->
<% include header.ejs %>
<div class="container">
	<!-- Button to finish editing -->
	<button id="profile-button" type="button" onclick="location.href='/profile';">Return to Profile</button>

	<!-- Form to edit blurb -->
	<form id="blurbform" action="/editBlurb" method="post">
				<textarea name="blurb" form="blurbform" placeholder="Type a short bio here"><%= blurb%></textarea>
        <input class="green-button" type="submit" value="Save Changes"/>
	</form>

	<!-- Form to add skills -->
	<form id="skillform" action="/addSkill" method="post">
        <input type="text" id="type-skill" name="skill" placeholder="Add a skill here">
        <input id="submit-skill" type="submit" value="Add Skill"/>
	</form>

	<!-- Display User's Skills and Remove Button -->
		<div id="user-skills">
			<p>Your current skills:</p>

			<% for(var i=0; i<skills.length; i++) {%>
				<div class="skill-row">
					<button onclick="removeSkill('<%= skills[i] %>')" type="button" class="delete">delete</button>
					<div class="skill"><%= skills[i] %></div>
				</div>
			<% } %>

</div>

<!-- Include Footer -->
<% include footer.ejs %>
